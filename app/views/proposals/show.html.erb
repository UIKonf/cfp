<% provide(:title, "#{@proposal.title}") %>

<p>
  <strong>Title:</strong>
  <%= @proposal.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @proposal.description %>
</p>

<% if @proposal.live %>
  <h2>Comments</h2>
  <%= render @proposal.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<% end %>

<%= link_to 'Edit', edit_proposal_path(@proposal) %>
<%= link_to 'Back', proposals_path %>
